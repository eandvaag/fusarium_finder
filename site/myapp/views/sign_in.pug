doctype html

html
    head
        title="Fusarium Finder"
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="icon" href=process.env.FF_PATH + "images/favicon.ico")
        //- link(href=process.env.FF_PATH + "external_stylesheets/font-awesome-6.1.2.css" rel="stylesheet")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" rel="stylesheet")
        link(href=process.env.FF_PATH + "stylesheets/main.css" rel='stylesheet')

        script(src=process.env.FF_PATH + "external_javascripts/jquery-3.6.0.js")
        script(src=process.env.FF_PATH + "javascripts/sign_in.js")
        script(src=process.env.FF_PATH + "javascripts/common.js")

    body


        div(class="centering_panel")

            div(style="height: 100px")
                div(style="height: 30px")
                h(class="title") Fusarium Finder

            div(class="dark-bg" style="padding: 10px 20px; border: none; border-top: 1px solid white; border-bottom: 1px solid white;")
                form(action="")

                    label(for="username" class="label" style="text-align: left; padding-left: 5px") Username

                    table
                        tr 
                            td(style="width: 100%")
                                input(id="username" name="username" type="text" style="width: 345px" autocomplete="username" minlength=3 maxlength=30 required)

                    label(for="password" class="label" style="text-align: left; padding-left: 5px") Password

                    table
                        tr 
                            td 
                                input(id="password" name="password" type="password" style="width: 345px; padding-right: 40px" autocomplete="current-password" minlength=8 maxlength=40 required)
                            td 
                                i(id="password_vis_toggle" style="cursor: pointer; color: white; margin-left: -40px; margin-bottom: 17px; font-size: 15px" class="fa-solid fa-eye-slash")


                    div(style="height: 20px")

                    button(id="sign_in_button" class="button-blue button-blue-hover" style="width: 95%")
                        span(id="sign_in_button_text") Sign In

            div(style="height: 50px; display: block")
                div(style="height: 25px")
                div(id="error_message" style="text-align: center")
                div(id="sign_in_loader" class="loader")
